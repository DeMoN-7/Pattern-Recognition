#!/bin/bash
# Script to check file permissions of a given file

echo "Enter the filename:"
read file

if [ -e "$file" ]; then
    if [ -r "$file" ]; then
        echo "File is readable."
    else
        echo "File is not readable."
    fi

    if [ -w "$file" ]; then
        echo "File is writable."
    else
        echo "File is not writable."
    fi

    if [ -x "$file" ]; then
        echo "File is executable."
    else
        echo "File is not executable."
    fi
else
    echo "File does not exist."
fi



q2



#!/bin/bash
# Script for string operations

echo "Enter first string:"
read str1
echo "Enter second string:"
read str2

# String length
echo "Length of first string: ${#str1}"
echo "Length of second string: ${#str2}"

# Concatenation
concat="$str1$str2"
echo "Concatenated string: $concat"

# Comparison
if [ "$str1" = "$str2" ]; then
    echo "Both strings are equal."
else
    echo "Strings are not equal."
fi



q3


#!/bin/bash
# Script to search for a specific pattern in a file

echo "Enter filename:"
read file
echo "Enter pattern to search:"
read pattern

if [ -e "$file" ]; then
    echo "Matching lines are:"
    grep "$pattern" "$file"
else
    echo "File not found."
fi



q4




#!/bin/bash

echo "System Information"
echo "------------------"

echo "Date and Time: $(date)"
echo "Logged in Users:"
who
echo "Uptime:"
uptime -p
echo "Hostname: $(hostname)"
echo "OS Info:"
uname -a
echo "Memory Info:"
free -h
echo "Disk Usage:"
df -h --total | grep total
echo "CPU Info:"
lscpu | grep "Model name"


